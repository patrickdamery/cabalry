<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ignore"
            android:id="@+id/bIgnore"
            android:layout_marginLeft="46dp" android:layout_marginStart="46dp" android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:id="@+id/bAccept"
            android:layout_alignTop="@+id/bIgnore" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="43dp" android:layout_marginEnd="43dp"/>
</RelativeLayout>
