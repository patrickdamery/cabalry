<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MapActivity"
                android:keepScreenOn="true" >


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"/>

    <ToggleButton
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:textOn=""
            android:textOff=""
            android:textSize="0dp"
            android:background="@drawable/nearby_selector"
            android:id="@+id/bNearby"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true" />
    <Button
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:text=""
            android:textSize="0dp"
            android:id="@+id/bAlarm"
            android:background="@drawable/b_alarm"
            android:layout_alignBottom="@+id/bNearby"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    <Button
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:text=""
            android:textSize="0dp"
            android:background="@drawable/b_restore"
            android:id="@+id/bLastAlarm"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
