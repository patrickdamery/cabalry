<resources>

    <style name="Theme.Cabalry" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/cab_bg</item>
        <item name="android:textColorPrimary">@color/cab_text</item>
        <item name="android:textColorSecondary">@color/cab_text</item>

        <item name="actionBarStyle">@style/Widget.Cabalry.ActionBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Cabalry.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Cabalry.PopupMenu</item>
    </style>

    <style name="Widget.Cabalry.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/cab_red</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ThemeOverlay.Cabalry.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@color/cab_ab_title</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">@color/cab_ab_subtitle</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">@color/cab_text</item>
        <!-- action menu item icon color - only applies to appcompat-v7 icons :( -->
        <item name="colorControlNormal">?android:textColorPrimary</item>
    </style>

    <style name="ThemeOverlay.Cabalry.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- popup menu background - NEVER "android:background" !!! in themes -->
        <item name="android:colorBackground">@color/cab_pm_bg</item>
        <!-- popup menu item text color -->
        <item name="android:textColorPrimary">@color/cab_pm_text</item>
    </style>

</resources>
