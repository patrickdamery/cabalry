<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/tableLayout1"
android:layout_width="fill_parent"
android:layout_height="fill_parent" >

<TableRow
    android:id="@+id/tableRow1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <TextView
        android:id="@+id/deviceStateView"
        android:text="@string/device_state"
        android:layout_span="2" />

    <TextView
        android:id="@+id/deviceStateText"
        android:text="" />

</TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/deviceChargeView"
            android:text="@string/device_charge"
            android:layout_span="2" />

        <TextView
            android:id="@+id/deviceChargeText"
            android:text="" />
</TableRow>

<TableRow
    android:id="@+id/tableRow3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dip" >

    <Button
        android:id="@+id/connect_button"
        android:layout_column="0"
        android:onClick="deviceConnectCallback"
        android:text="@string/action_connect" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_column="1"
        android:onClick="deviceDisconnectCallback"
        android:text="@string/action_disconnect" />
</TableRow>

</TableLayout>
